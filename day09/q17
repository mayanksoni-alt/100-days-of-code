#include <stdio.h>
int main(){
   float a, b, c, root1, root2, imaginary, D;
   printf("Enter values of a, b, c of quadratic equation :");
   scanf("%f%f%f", &a, &b, &c);
      D = b*b-4*a*c;
   if(D > 0){

     printf("two distinct and real roots exists:\n");
      root1 = (-b+sqrt(D))/(2*a);
      root2 = (-b-sqrt(D))/(2*a);
      printf("root1 = %.2f and root2 = %.2f\n",root1 , root2);
   } else if(D == 0) {
      printf("one real root exists:\n");
      root1 = root2 = -b/(2*a);
      printf("root1 = root2 = %.2f\n", root1);
   } else {
      printf("two distinct complex roots exists:\n");
      root1 = root2 = -b/(2*a);
      imaginary =sqrt(-D)/(2*a);
      printf("root1 = %.2f+%.2fi and root2 = %.2f-%.2f\n", root1, imaginary, root2, imaginary);
   }
   return 0;
  
}
