#include <stdio.h>
int main(){
  int num;
  int whilecontinue =1;
  while(whilecontinue == 1){
  printf("Enter a number:");
  scanf("%d",&num);
  if(num == 1){
    printf("sunday\n");
  }
  else if (num == 2){
    printf("monday\n");
  }
  else if (num == 3){
    printf("tuesday\n");
  }
  else if (num == 4){
    printf("Wednesday\n");
  }
  else if (num == 5){
    printf("Thursday\n");
  }
  else if (num == 6){
    printf("Friday\n");
  }
  else if (num == 7){
    printf("Saturday\n");
  }
  else{
    printf("Invalid input\n Try agian\n");
  }
    printf("DO you want to continue? (1/0):\n");
    scanf("%d", &whilecontinue);
  }
  printf("Thank you for using the program\n");
  return 0;
}
